<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             BackgroundColor="WhiteSmoke"
             x:Class="HotelRental.AddRoomPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Entry Placeholder="Номер комнаты" Text="{Binding NewRoomNumber}" TextColor="Black" />
                <Entry Placeholder="Описание" Text="{Binding NewRoomDescription}" TextColor="Black"/>
                <Entry Placeholder="Цена за ночь" Text="{Binding NewRoomPrice}" TextColor="Black"/>
                <Button Text="Назад" Clicked="BackButton_Clicked" />
                <Button Text="Добавить" Clicked="AddButton_Clicked" />
            </StackLayout>
         </StackLayout>
    </ContentPage.Content>
</ContentPage>