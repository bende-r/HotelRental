<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             BackgroundColor="WhiteSmoke"
             x:Class="HotelRental.MainPage" >

    <ContentPage.Content>
        <StackLayout>
        <ListView ItemsSource="{Binding Hotels}" HasUnevenRows="True" SelectedItem="{Binding SelectedHotel, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Name}" TextColor="Black"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Добавить отель" Clicked="AddHotelClicked" />
                <Button Text="Удалить отель" Clicked="DeleteHotelClicked" />
                <Button Text="Редактировать отель" Clicked="EditHotelClicked" />
                <Button Text="Список комнат" Clicked="ShowRoomsPage" />
                <Button Text="Сохранить данные" Clicked="Button_OnClicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
